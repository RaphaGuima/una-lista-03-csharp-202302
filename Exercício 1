double n1, n2, n3, maior, menor, med;

Console.WriteLine("Insira o primeiro valor: ");
n1 = Convert.ToDouble(Console.ReadLine());

Console.WriteLine("Insira o segundo valor: ");
n2 = Convert.ToDouble(Console.ReadLine());

Console.WriteLine("Insira o terceiro valor: ");
n3 = Convert.ToDouble(Console.ReadLine());

// calculo para descobrir o maior número
maior = Math.Max(n1, Math.Max(n2, n3));

// calculo para descobrir o menor número
menor = Math.Min(n1, Math.Min(n2, n3));

// calculo para descobrir a média aritmética
med = (n1 + n2 + n3) / 3;

Console.WriteLine("O maior número é: " + maior);
Console.WriteLine("O menor número é: " + menor);

//metodo 'toString' para me apresentar apenas duas casas decimais após o ponto
Console.WriteLine("A média aritmética dos três números é: " + med.ToString("0.00"));

Console.ReadLine();
